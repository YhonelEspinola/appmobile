<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tiendazavaletaapp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/bottom</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Tiendazavaletaapp" parent="Base.Theme.Tiendazavaletaapp" />

    <style name="CustomBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <!-- Fondo de Ã­tem normal y seleccionado transparente -->
        <item name="itemRippleColor">@null</item>
        <item name="itemActiveIndicatorStyle">@style/CustomActiveIndicatorStyle</item>
    </style>

    <style name="CustomActiveIndicatorStyle">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="SplashTheme" parent="Base.Theme.Tiendazavaletaapp">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
