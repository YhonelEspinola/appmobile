<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center">
        <ImageView
            android:id="@+id/btnImageUser"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:tint="@color/icon_color"
            android:src="@drawable/icon_account">

        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola"
                android:textStyle="bold"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center"
            android:layout_marginBottom="20dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnButtonCrearProductos"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:text="Crear Productos"
                android:textStyle="bold"
                android:textColor="@color/icon_color"
                android:drawableTint="@color/icon_color"
                android:drawableTop="@drawable/icon_create"
                android:background="@drawable/design_btn_admin_create"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingTop="30dp"
                android:paddingBottom="25dp"
                android:layout_marginEnd="20dp"
                android:textAllCaps="false"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnButtonVerProductos"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:text="Ver Productos"
                android:textStyle="bold"
                android:drawableTint="@color/icon_color"
                android:textColor="@color/icon_color"
                android:drawableTop="@drawable/icon_ojo"
                android:background="@drawable/desing_btn_admin_ver"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingTop="30dp"
                android:paddingBottom="25dp"
                android:layout_marginStart="20dp"
                android:textAllCaps="false"
                />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnButtonVerPedios"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:drawableTint="@color/icon_color"
            android:text="Ver Pedidos"
            android:textStyle="bold"
            android:textColor="@color/icon_color"
            android:drawableTop="@drawable/icon_car_admin"
            android:background="@drawable/desing_btn_admin_ped"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingTop="30dp"
            android:paddingBottom="25dp"
            android:layout_marginEnd="20dp"
            android:textAllCaps="false"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnButtonAdmin"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:text="Nuevo Admin"
            android:drawableTint="@color/icon_color"
            android:textStyle="bold"
            android:textColor="@color/icon_color"
            android:drawableTop="@drawable/icon_person_new_admin"
            android:background="@drawable/design_btn_admin_new"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingTop="35dp"
            android:paddingBottom="25dp"
            android:layout_marginStart="20dp"
            android:textAllCaps="false"/>

    </LinearLayout>



    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnButonCerrarSesion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_normal"
        android:text="Cerrar sesiÃ³n"
        android:layout_margin="10dp"
        android:textColor="@color/bottom"
        android:drawableStart="@drawable/cerrar_sesion"
        android:paddingStart="16dp"
        android:paddingEnd="40dp"
        android:drawableTint="@color/icon_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>