<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/pedidos"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Correo del cliente : "
                    android:gravity="start"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/textCorreoCliente"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:hint="Correo"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Entrega en tienda : "
                    android:gravity="start"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/textEntregaTienda"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:hint="Entrega en tienda"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Fecha de compra : "
                    android:gravity="start"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/textFechaCompra"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:hint="Fecha de compra"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Cod.Pedido : "
                    android:gravity="start"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/textCodPedido"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:hint="Codigo del pedido"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Total en soles: "
                    android:gravity="start"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/textTotal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:hint="0.0"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>